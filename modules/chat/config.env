# --- Mia-Chat defaults ---

# Python (venv)
MIA_PYTHON="/data/mia/venv/bin/python3"

# Console output
# quiet  = nur Startbanner + STATE + ERROR
# normal = STATE + INFO + ERROR
# debug  = alles (inkl. DEBUG)
MIA_CONSOLE="quiet"
MIA_CONSOLE_STATE_LINES="1"     # 1 -> zeigt "Listening..." / "Thinking..."
MIA_CONSOLE_SHOW_DIALOG="1"     # 1 -> zeigt "Du:" / "Mia:" in normal/quiet (gekürzt)
MIA_CHAT_NO_PROMPT="0"   # im Terminal 0; Launcher setzt automatisch 1 per ENV
MIA_CONSOLE_MAX_CHARS="100000"     # Dialog-Zeilen kürzen (Konsole), File bleibt vollständig
MIA_STYLE=pragmatic


# Logs
MIA_LOG_DIR="/data/mia/memory/logs"
MIA_LOG_FILE=""                 # optional override; sonst $MIA_LOG_DIR/chat/chat.log

# Sessions
MIA_SESSION_DIR="/data/mia/memory/sessions"
MIA_SESSION_MODE="new"          # new|default|path
MIA_SESSION=""                  # wenn MODE=path: kompletter Pfad zur Session-Datei

# Ollama
MIA_OLLAMA_HOST="http://127.0.0.1:11434"
MIA_LLM="qwen2.5:32b-instruct-q5_K_M"
MIA_KEEPALIVE="-1m"
MIA_WARMUP="1"
MIA_NUM_PREDICT="2400"
MIA_TEMPERATURE="0.4"
MIA_TOP_P="0.9"
MIA_REPEAT_PENALTY="1.1"
MIA_OLLAMA_STALL_TIMEOUT_SEC="120"

# Summary
MIA_SUMMARY="1"
MIA_SUMMARY_EVERY_N_TURNS="0"   # 0=nur beim Exit; sonst z.B. 6 => alle 6 User-Turns
MIA_SUMMARY_MAX_BULLETS="8"
MIA_SUMMARY_MODEL=""            # optional; sonst MIA_LLM
MIA_GLOBAL_SUMMARY_LOG=""       # optional override; sonst $MIA_LOG_DIR/session_summaries.jsonl

# Exit words / commands (Terminal)
MIA_EXITWORDS="exit,quit,bye,ciao,ende,mia ende"
MIA_HELPWORDS="help,?,hilfe"
MIA_CLEARWORDS="clear,cls,reset"

